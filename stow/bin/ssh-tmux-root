#!/usr/bin/env bash
# Quickly SSH to a server with tmux-root
set -e

usage() {
  echo "Usage: $(basename $0) {ssh_server}"
  echo "Requires tmux-root to be in the server's bin path."
}

main() {
  if [[ $# -lt 1 ]]; then
    usage >&2
    exit 1
  fi

  host=${@: -1}
  set -- "${@:1:$(($#-1))}"
  ssh -t "${host}" 'bash -lc tmux-root'
}
main "$@"
