#!/bin/sh
# Show all listening ports for a PID
set -e

function usage {
    echo "Usage: $(basename "$0") [pid]"
}

function main {
  local pid

  if [ $# -ne 1 ]; then
    usage
    exit 1
  fi

  pid="$1"

  if [ "${pid}" -lt 1 ]; then
    usage
    exit 1
  fi

  lsof -a -nP -p "${pid}" -i TCP -sTCP:LISTEN
}
main "$@"
