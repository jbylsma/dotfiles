#!/usr/bin/env bash
# Open up a tmux root session with a pane for the non-root user
set -e

tmux_user=""
if [[ "$UID" -eq 0 ]]; then
  if [[ -n "${SUDO_USER}" ]]; then
    tmux_user="${SUDO_USER}"
  else
    echo "Could not determine non-root user" >&2
    exit 1
  fi
else
  tmux_user="${USER}"
fi

session_name="!${tmux_user}"

cd "${HOME}"
sure \
  tmux new-session -A -s "${session_name}" -n "Main"
