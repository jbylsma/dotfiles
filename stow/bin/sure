#!/usr/bin/env bash
# sure: Switch user, retain environment
set -e

declare -a required_envs=( HOME SHELL )
for env in "${required_envs[@]}"; do
  if [[ -z "${!env}" ]]; then
    echo "${env} not set" >&2
    return 1
  fi
done

cmd=""
if [[ $# -gt 0 ]]; then
  cmd+="$@"
else
  cmd+="${SHELL}"
  # Make bash request a login shell
  if [[ "$(basename "${SHELL}")" = 'bash' ]]; then
    cmd+=" -l"
  fi
fi

sudo -E su root -c "export HOME=\"${HOME}\"; ${cmd}"
