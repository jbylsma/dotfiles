#!/bin/bash
set -e

#
function _which() {
  which "$@" >/dev/null 2>&1
}

#
title() {
  local char
  local title

  char='*'
  title="$1"

  printf "\n%$((${#title} + 4))s\n" | tr ' ' "${char}"
  printf "%s* ${title} *\n"
  printf "%$((${#title} + 4))s\n" | tr ' ' "${char}"
}

#
update_janus() {
  local janus_dir

  janus_dir="${HOME}/.vim"

  title "Janus"
  cd "${janus_dir}"
  rake
}

#
update_brew() {
  title "Brew"

  ! _which brew && \
    echo "Brew not found" >&2 && \
    return

  brew update
  brew upgrade --all
}

dactyl_commit_get() {
  git rev-parse "${1:-HEAD}"
}

#
update_dactyl() {
  local dactyl_dir
  local dactyl_branch

  dactyl_branch="origin/master"
  dactyl_dir="${HOME}/usr/src/dactyl"

  title "Pentadactyl"

  # Make sure dactyl exists
  test ! -d "${dactyl_dir}" && \
    echo "Dactyl directory could not be found." >&2 && \
    return

  cd "${dactyl_dir}"
  git fetch origin
  if [[ "$(dactyl_commit_get)" != "$(dactyl_commit_get "${dactyl_branch}")" ]]; then
    echo "Installing new Pentadactyl"
    git pull
  else
    echo "Already up-to-date."
  fi
}

update_composer() {
  title "Composer"

  _which composer || \
    echo "composer not found" >&2 && \
    return

  composer self-update
  composer global update
}

#
main() {
  update_janus
  update_brew
  update_dactyl
  update_composer
  echo -e "\n${0} completed"
}
main
