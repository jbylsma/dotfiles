#!/bin/bash
set -e

#
function _which() {
  which "$@" >/dev/null 2>&1
}

#
title() {
  local char
  local title

  char='*'
  title="$1"

  printf "\n%$((${#title} + 4))s\n" | tr ' ' "${char}"
  printf "%s* ${title} *\n"
  printf "%$((${#title} + 4))s\n" | tr ' ' "${char}"
}

#
update_dotfiles() {
  local dotfiles_branch
  local dotfiles_dir

  dotfiles_branch="origin/master"
  dotfiles_dir="${HOME}/usr/src/dotfiles"

  title "dotfiles"

  test ! -d "${dotfiles_dir}" && \
    echo "dotfiles directory could not be found." >&2 && \
    return

  git -C "${dotfiles_dir}" fetch origin
  if [[ "$(git_commit_get HEAD)" != "$(git_commit_get "${dotfiles_branch}")" ]]; then
    echo "Updating new dotfiles"
    git -C "${dotfiles_dir}" pull
  else
    echo "Already up-to-date."
  fi
}

#
update_janus() {
  local janus_dir

  janus_dir="${HOME}/.vim"

  title "Janus"
  cd "${janus_dir}"
  rake
}

#
update_brew() {
  title "Brew"

  ! _which brew && \
    echo "Brew not found" >&2 && \
    return

  brew update
  brew upgrade --all
}

git_commit_get() {
  git rev-parse "${1}"
}

#
update_dactyl() {
  local dactyl_dir
  local dactyl_branch

  dactyl_branch="origin/master"
  dactyl_dir="${HOME}/usr/src/dactyl"

  title "Pentadactyl"

  # Make sure dactyl exists
  test ! -d "${dactyl_dir}" && \
    echo "Dactyl directory could not be found." >&2 && \
    return

  git -C "${dactyl_dir}" fetch origin
  if [[ "$(git_commit_get HEAD)" != "$(git_commit_get "${dactyl_branch}")" ]]; then
    echo "Updating Pentadactyl"
    git -C "${dactyl_dir}" pull
  else
    echo "Already up-to-date."
  fi
}

update_composer() {
  title "Composer"

  ! _which composer && \
    echo "composer not found" >&2 && \
    return

  composer self-update
  composer global update
}

#
main() {
  update_dotfiles
  update_janus
  update_brew
  update_dactyl
  update_composer
  echo -e "\n${0} completed"
}
main
