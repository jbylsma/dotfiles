#!/usr/bin/env bash
#
# Show what process is listening on a port
#

set -e

###############
# Basic usage
###############
function usage () {
  echo "Usage: $(basename "$0") {port}" >&2
}

########
# Main
########
function main() {
  local port

  if [[ $# -ne 1 ]]; then
    usage
    exit 1
  fi

  # Make sure the port is numeric
  port="$1"
  if ! [[ "${port}" =~ ^[0-9]+$ ]]; then
    usage
    exit 1
  fi

  pid="$(sudo lsof -i ":${port}" | awk '$0~ / \(LISTEN\)$/ { print $2 }')"

  if [[ -z "${pid}" ]]; then
    echo "No program found for port ${port}"
    exit 1
  fi

  # Check for /proc, then parse ps (for OS X)
  if [[ -d "/proc" ]]; then
    sed -e 's|\x0| |g' < "/proc/${pid}/cmdline"
    echo
  else
    ps -p "${pid}" -o command | \
      awk 'NR > 1'
  fi
}

main "$@"
